<h2>This is a bookshelf look at it</h2>

<h1> <%= bookshelf.escape("title") %> </h1>
<p> <%= bookshelf.escape("description")%> </p>

<ul>
	<% bookshelf.books().each(function(book){ %>
		<li>
			<a href="/#/books/<%= book.id %>"> <%= book.escape("title")%> </a>
		</li>	
	<% }); %>
</ul>

<form>
	<p> Add a Book! </p>
	<label>Add book with ID of:
		<input type = "text" name="book_id">
	</label>
	<input type = "submit">
</form>

<br>

<a href="/#/bookshelves/<%=bookshelf.id%>/edit">Edit this bookshelf</a><br>
<a href="/#/bookshelves">Back to index</a>